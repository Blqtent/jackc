
class Unit {
	static int maxlevel;
	
	function void setLevel(int l) {
		let maxlevel = l;
		return;
	}

	function void log(int level, String txt, int state) {
		if (level > maxlevel) {
			return;
		}
		do Output.printString(txt);
		do Output.printString("... ");
		do Output.printInt(state);
		do Output.println();
		return;
	}
}
